{
  "name": "@spending-monitor/ingestion-service",
  "private": true,
  "version": "0.0.0",
  "description": "Transaction ingestion service with Kafka integration",
  "scripts": {
    "install:deps": "python -m pip install -r ingestion-service-py/requirements.txt",
    "dev": "cd ingestion-service-py && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8001",
    "start": "cd ingestion-service-py && python -m uvicorn main:app --host 0.0.0.0 --port 8001",
    "test": "cd ingestion-service-py && python -m pytest tests/unit/ -v",
    "lint": "cd ingestion-service-py && python -m flake8 .",
    "lint:fix": "cd ingestion-service-py && python -m flake8 . --fix",
    "build:docker": "cd ingestion-service-py && podman build . --file Containerfile --tag ingestion-service-py:latest",
    "helm:lint": "helm lint deploy/ingestion-service-py/helm",
    "e2e:test": "cd scripts && python e2e_test.py"
  }
}
